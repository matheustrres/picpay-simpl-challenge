{
	"name": "picpay-simpl-challenge",
	"author": "Matheus Torres <matheustrres.rj@gmail.com>",
	"version": "1.0.0",
	"description": "Simplified Picpay - Backend Challenge",
	"private": true,
	"main": "./dist/main.js",
	"license": "MIT",
	"engines": {
		"node": "20.x",
		"pnpm": ">=9.1.1"
	},
	"scripts": {
		"build": "nest build -p ./tsconfig.build.json -c ./nest-cli.json -b swc",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"lint": "eslint \"{src,tests}/**/*.ts\" --fix",
		"precommit": "lint-staged",
		"prepare": "husky install",
		"start": "dotenv -e .env.staging -- nest start",
		"start:dev": "dotenv -e .env.dev -- nest start --watch",
		"start:prod": "node --env-file=.env .",
		"test": "glob -c \"node --import tsx --no-warnings --test\" \"./tests/**/*.{spec,test}.ts\""
	},
	"dependencies": {
		"@brazilian-utils/brazilian-utils": "1.0.0-rc.12",
		"@nestjs/cli": "^10.3.2",
		"@nestjs/common": "^10.3.7",
		"@nestjs/config": "^3.2.2",
		"@nestjs/core": "^10.3.7",
		"@nestjs/platform-express": "^10.3.9",
		"@node-rs/bcrypt": "^1.10.4",
		"@node-rs/jsonwebtoken": "^0.5.6",
		"@prisma/client": "5.15.0",
		"cors": "^2.8.5",
		"express": "^4.19.2",
		"helmet": "^7.1.0",
		"ulid": "^2.3.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@swc/cli": "^0.3.12",
		"@swc/core": "^1.4.12",
		"@swc/helpers": "^0.5.8",
		"@tsconfig/node-lts": "^20.1.3",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "20.11.1",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"dotenv-cli": "^7.4.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import-helpers": "^1.3.1",
		"eslint-plugin-prettier": "^5.1.3",
		"glob": "^10.3.10",
		"husky": "^8.0.0",
		"lint-staged": "^15.2.2",
		"prisma": "5.15.0",
		"tsx": "^4.7.1",
		"typescript": "^5.4.2"
	}
}
